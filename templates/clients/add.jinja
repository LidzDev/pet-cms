{% extends 'catsitter_nav.jinja' %}

{% block stuff %}
<div id="content-area">
<h3>Client Information</h3>
<form name="add_client" action="/clients/{{client.id}}" method="post">
    <table>
        <tr>
            <td><label for="first_name">First name:</label></td>
            <td><input type="text" size="30" name="first_name" id="first_name" required="yes" value=""/></td>
        </tr>
        <tr>
            <td><label for="last_name">Last name:</label></td>
            <td><input type="text" size="30" name="last_name" id="last_name" required="yes" value=""/></td>
        </tr>
        <tr>
            <td><label for="email">email:</label></td>
            <td><input type="email" size="30" name="email" id="email" required="yes" value=""/></td>
        </tr>
        <tr>
            <td><label for="phone">phone:</label></td>
            <td><input type="text" size="30" name="phone" id="phone" required="yes" value=""/></td>
        </tr>
        <tr>
            <td><label for="street">street:</label></td>
            <td><input type="text" size="30" name="street" id="street" required="yes" value=""/></td>
        </tr>
        <tr>
            <td><label for="postcode">postcode:</label></td>
            <td><input type="text" size="30" name="postcode" id="postcode" required="yes" value=""/></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Add client"/></td>
        </tr>
    </table>
</form>
</div>
<div id="extra-content">
<h3>{{client.first_name}}'s Pets</h3>
<ul>
{% for pet in client.pets %}
    <li>{{ pet.pet_name }}</li>
{% endfor %}
</ul>
</div>
{% endblock %}