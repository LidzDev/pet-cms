{% extends 'client_nav.jinja' %}

{% block stuff %}
<div id="content-area">
<h3>Client Information</h3>
<form name="update_client" action="/clients/{{client.id}}" method="post">
    <table>
        <tr>
            <td><label for="first_name">First name:</label></td>
            <td><input type="text" size="30" name="first_name" id="first_name" required="yes" value="{{client.first_name}}"/></td>
        </tr>
        <tr>
            <td><label for="last_name">Last name:</label></td>
            <td><input type="text" size="30" name="last_name" id="last_name" required="yes" value="{{client.last_name}}"/></td>

        </tr>
        <tr>
            <td><label for="email">email:</label></td>
            <td><input type="email" size="30" name="email" id="email" required="yes" value="{{client.email}}"/></td>
        </tr>
        <tr>
            <td><label for="phone">phone:</label></td>
            <td><input type="text" size="30" name="phone" id="phone" required="yes" value="{{client.phone}}"/></td>
        </tr>
        <tr>
            <td><label for="street">street:</label></td>
            <td><input type="text" size="30" name="street" id="street" required="yes" value="{{client.street}}"/></td>
        </tr>
        <tr>
            <td><label for="postcode">postcode:</label></td>
            <td><input type="text" size="30" name="postcode" id="postcode" required="yes" value="{{client.postcode}}"/></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Update my details"/></td>
        </tr>
    </table>
</form>
</div>
<div id="extra-content">
    <h3>Access Instructions</h3>
    <table>
        <form name="update_special" action="/clients/update_special/{{client.id}}" method="post">
            <tr>
                <td>Enter any special instructions on key handover or how to enter your building here:<br><textarea name=access_instructions id="access_instructions" rows="3" cols="50">{{client.access_instructions}}</textarea></td>
            </tr>
            <tr>
                <td><input type="submit" name="update_special" value="Update special instructions"/></td>
            </tr>
        </form>
    </table>

    <h3>My data control</h3>
    <table>
        <tr>
            <td>
                <form id="bottom_align" name="delete_client" action="/clients/delete/{{client.id}}" method="post">
                    <input type="submit" name="client_record" value="Delete my Record"/>
                </form>
            </td>
        </tr>
    </table>
</div>
{% endblock %}