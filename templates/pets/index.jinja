{% extends 'catsitter_nav.jinja' %}

{% block stuff %}
<div id="content-area">
    <h3>All Pets</h3>
    <table>
        <tr>
            <th>name</th>
            <th>owner</th>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        {% for pet in pets |sort(attribute="client.first_name") %}
        <tr>
            <td>{{ pet.pet_name }}</td><td><a href="/clients/{{pet.client_id}}">{{ pet.client.first_name }} {{ pet.client.last_name }}</a></td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}