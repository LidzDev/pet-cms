{% extends 'catsitter_nav.jinja' %}

{% block stuff %}
<div id="content-area">
    <h3>All Bookings</h3>
    <table>
        <tr>
            <th id="label">Date</th>
            <th>Client</th>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>       
        {% for booking in bookings|sort(attribute="date") %}
            <tr>
                <td>{{ booking.date }}</td>
                <td><a href="/clients/{{booking.client_id}}">{{ booking.client.first_name}} {{booking.client.last_name}}</a></td>
 
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}